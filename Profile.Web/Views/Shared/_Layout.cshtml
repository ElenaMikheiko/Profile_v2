<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>@ViewData["Title"] - Profile</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
  @RenderSection("Styles", required: false)
  <script src="https://code.jquery.com/jquery-3.2.1.min.js" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" crossorigin="=anonymous"></script>
  <script src="~/js/lib/bootstrap.min.js"></script>
  <script src="~/js/lib/bootstrap-table.js"></script>
  <script src="~/js/lib/cropper.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
  <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
  <link rel="stylesheet" href="~/style/lib/font-awesome/css/font-awesome.min.css" />
  <link rel="stylesheet" href="~/style/import.css" />
  @RenderSection("Scripts", required: false)
</head>
<body>
    <div class="container">
        <header class="container__header">
            <div class="container__header_bground">
                <div class="container__header_align">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="container__image">
                        <img src="~/images/logo.png" alt="logo">
                    </a>
                    <span class="container__header_text">
                        profile
                    </span>
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </header>
        @RenderBody()
    </div>
    <script src="~/js/button.js"></script>
</body>
</html>